{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "AutoDJ: Setup Environment",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "pip",
                "install",
                "-r",
                "requirements.txt"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "AutoDJ: Run Tests",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "pytest",
                ".",
                "-v",
                "--cov=MonolithDev",
                "--cov=graphStuff",
                "--cov=MonolithDev/recognizingStuff",
                "--cov-report=html"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "AutoDJ: Lint Code (Auto-fix)",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "flake8",
                "--max-line-length=88",
                "--extend-ignore=E203,W503",
                "MonolithDev/",
                "graphStuff/",
                "MonolithDev/recognizingStuff/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "AutoDJ: Lint Code",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "flake8",
                "MonolithDev/",
                "graphStuff/",
                "MonolithDev/recognizingStuff/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "AutoDJ: Type Check",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "mypy",
                "MonolithDev/",
                "MonolithDev/recognizingStuff/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "AutoDJ: Format Code",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "black",
                "MonolithDev/",
                "graphStuff/",
                "MonolithDev/recognizingStuff/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "AutoDJ: Sort Imports",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "isort",
                "MonolithDev/",
                "graphStuff/",
                "MonolithDev/recognizingStuff/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "AutoDJ: Auto-fix All Issues",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "black",
                "--line-length=88",
                "MonolithDev/",
                "graphStuff/",
                "MonolithDev/recognizingStuff/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "AutoDJ: Run Audio Recognition",
            "type": "shell",
            "command": "python",
            "args": [
                "MonolithDev/recognizingStuff/main.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "AutoDJ: Run All Checks & Format",
            "dependsOrder": "sequence",
            "dependsOn": [
                "AutoDJ: Auto-fix All Issues",
                "AutoDJ: Format Code",
                "AutoDJ: Sort Imports",
                "AutoDJ: Lint Code",
                "AutoDJ: Type Check",
                "AutoDJ: Run Tests"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}